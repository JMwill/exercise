{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dist",
    "target": "es5"
  },
  "include": [
    "src/**/*",
    "utils/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}